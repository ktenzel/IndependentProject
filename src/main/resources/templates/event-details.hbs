{{#partial "content"}}
<h3>Event name:</h3>
<p>{{ post.content }}</p>
<h4>Description:</h4>
<p>{{ post.description }}</p>
<h5>Event Status:</h5>

<p>
    {{#if post.published }}
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Published
    {{else}}
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
    {{/if}}
</p>

{{/partial}}

{{> layout.hbs}}