{{#partial "content"}}
<h3>Event name:</h3>
<p>{{ content }}</p>
<h4>Description:</h4>
<p>{{ description }}</p>
<h5>Event Status:</h5>

<p>
    {{#if post.published }}
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Published
    {{else}}
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
    {{/if}}
    <a href="/events/{{post.id}}/update">Edit this event</a>
    <a href="/posts/{{post.id}}/delete">DELETE this event (no undo)</a>
</p>

{{/partial}}

{{> layout.hbs}}