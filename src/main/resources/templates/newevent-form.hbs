{{#partial "content"}}


{{#if editEvent}}
<div class="centertext">
    <h1>Edit this Event!</h1>
    <form action="/events/{{editEvent.id}}/update" method="post">
        <label for="content">Event Name</label>
        <input id="content" name="content" type="text" value="{{editEvent.content}}">
        <label for="description">Description</label>
        <input id="description" name="description" type="text" value="{{editEvent.description}}">
        <button type="submit" class="btn btn-default">Update Event</button>
    </form>
</div>
{{else}}
<div class="centertext">
<h1>Add new event</h1>

<form action="/events/new" method="post">
    <label for="content">Event Name</label>
    <input id="content" name="content" type="text">
    <label for="description">Description</label>
    <input id="description" name="description" type="text">

    <button type="submit" class="btn btn-default">Add Event</button>
    <br>
</div>
    {{/if}}
{{/partial}}

{{>layout.hbs}}